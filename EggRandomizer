--// SERVICES local Players = game:GetService("Players") local Workspace = game:GetService("Workspace") local TweenService = game:GetService("TweenService") local RunService = game:GetService("RunService") local player = Players.LocalPlayer local mouse = player:GetMouse()

--// PET TABLE (Accurate from Grow a Garden) local pets = { ["Common Egg"] = { "Golden Lab", "Dog", "Bunny" }, ["Uncommon Egg"] = { "Black Bunny", "Chicken", "Cat", "Deer" }, ["Rare Egg"] = { "Monkey", "Rooster", "Horse", "Orange Tabby" }, ["Mythical Egg"] = { "Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant", "Red Fox" }, ["Bug Egg"] = { "Snail", "Giant Ant", "Caterpillar", "Praying Mantis", "Dragonfly" }, ["Common Summer Egg"] = { "Starfish", "Crab", "Seagull" }, ["Rare Summer Egg"] = { "Flamingo", "Toucan", "Sea Turtle", "Orangutan", "Seal" }, ["Paradise Egg"] = { "Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus" }, ["Dinosaur Egg"] = { "Raptor", "Triceratops", "Stegosaurus", "Pterodactyl", "Brontosaurus", "Tâ€‘Rex" }, ["Primal Egg"] = { "Iguanodon", "Parasaurolophus", "Pachycephalosaurus", "Dilophosaurus", "Ankylosaurus", "Spinosaurus" }, ["Oasis Egg"] = { "Ostrich", "Axolotl", "Meerkat", "Sand Snake" }, ["Anti Bee Egg"] = { "Wasp", "Tarantula Hawk", "Moth", "Butterfly", "Disco Bee" }, ["Night Egg"] = { "Hedgehog", "Mole", "Frog", "Echo Frog", "Night Owl", "Raccoon" }, ["Bee Egg"] = { "Bee", "Honey Bee", "Bear Bee", "Petal Bee", "Queen Bee" }, ["Zen Egg"] = { "Shiba Inu", "Nihonzaru", "Tanuki", "Tanchozuru", "Kappa", "Kitsune" } }

--// GUI SETUP local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui")) gui.Name = "EggESP_GUI"

local main = Instance.new("Frame", gui) main.Size = UDim2.new(0, 250, 0, 200) main.Position = UDim2.new(0, 20, 0.3, 0) main.BackgroundColor3 = Color3.fromRGB(30, 30, 30) main.BorderSizePixel = 0 main.Name = "Main" main.Active = true main.Draggable = true

local title = Instance.new("TextLabel", main) title.Size = UDim2.new(1, 0, 0, 30) title.Text = "ðŸŒ± Grow a Garden - Egg Utility" title.TextColor3 = Color3.new(1, 1, 1) title.BackgroundTransparency = 1 title.Font = Enum.Font.SourceSansBold title.TextScaled = true

local espBtn = Instance.new("TextButton", main) espBtn.Position = UDim2.new(0, 10, 0, 40) espBtn.Size = UDim2.new(1, -20, 0, 40) espBtn.Text = "Toggle ESP (OFF)" espBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60) espBtn.TextColor3 = Color3.new(1, 1, 1) espBtn.Font = Enum.Font.SourceSansBold espBtn.TextScaled = true

local randBtn = Instance.new("TextButton", main) randBtn.Position = UDim2.new(0, 10, 0, 90) randBtn.Size = UDim2.new(1, -20, 0, 40) randBtn.Text = "Randomize Egg" randBtn.BackgroundColor3 = Color3.fromRGB(50, 100, 50) randBtn.TextColor3 = Color3.new(1, 1, 1) randBtn.Font = Enum.Font.SourceSansBold randBtn.TextScaled = true

local autoBtn = Instance.new("TextButton", main) autoBtn.Position = UDim2.new(0, 10, 0, 140) autoBtn.Size = UDim2.new(1, -20, 0, 40) autoBtn.Text = "Auto Hatch (OFF)" autoBtn.BackgroundColor3 = Color3.fromRGB(100, 50, 50) autoBtn.TextColor3 = Color3.new(1, 1, 1) autoBtn.Font = Enum.Font.SourceSansBold autoBtn.TextScaled = true

--// ESP FUNCTION local espEnabled = false local eggFolder = Workspace:FindFirstChild("Eggs") or Workspace

local function attachESP(egg) if egg:FindFirstChild("EggESP") or not pets[egg.Name] then return end local part = egg:IsA("Model") and egg:FindFirstChildWhichIsA("BasePart") or egg if not part then return end

local bb = Instance.new("BillboardGui", part) bb.Name = "EggESP" bb.Size = UDim2.new(0, 220, 0, 140) bb.StudsOffset = Vector3.new(0, 3, 0) bb.AlwaysOnTop = true

local label = Instance.new("TextLabel", bb) label.Size = UDim2.new(1, 0, 1, 0) label.BackgroundTransparency = 1 label.TextColor3 = Color3.new(1, 1, 0) label.TextStrokeTransparency = 0.6 label.TextScaled = true label.Font = Enum.Font.SourceSansBold label.Text = egg.Name .. "\n" .. table.concat(pets[egg.Name], "\n") end

local function updateESP() for _, egg in ipairs(eggFolder:GetDescendants()) do if pets[egg.Name] then if espEnabled then attachESP(egg) else local bb = egg:FindFirstChild("EggESP") if bb then bb:Destroy() end end end end end

espBtn.MouseButton1Click:Connect(function() espEnabled = not espEnabled espBtn.Text = "Toggle ESP (" .. (espEnabled and "ON" or "OFF") .. ")" updateESP() end)

--// OPTIONAL LOOP FOR AUTO REFRESH RunService.RenderStepped:Connect(function() if espEnabled then updateESP() end end)

